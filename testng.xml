<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Automation learning" verbose="1"
       parallel="classes" thread-count="1" configfailurepolicy="continue">
    <test name="Regression test" annotations="JDK" preserve-order="true">
        <classes>
            <class name="testng.LoginTest">
                <methods>
                    <include name="verifyLoginSuccess"/>
                    <include name="verifyLoginFail"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Smoke test" annotations="JDK" preserve-order="true">
        <classes>
            <class name="testng.LoginTest">
                <methods>
                    <exclude name="verifyLoginFail"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>